<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.hoteldetail.fragment.AllHotelDetailsFragment">

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@color/black"
        android:drawableStart="@drawable/ic_baseline_filter_alt_24"
        android:padding="6dp"
        android:text="@string/filter"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/item_collector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:padding="8dp"
            android:text="Thu, 20 JAN"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_forward_24">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border"
            android:padding="8dp"
            android:text="Thu, 20 JAN"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:padding="8dp"
            android:text="2"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_person_24" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_item"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_collector"/>

</RelativeLayout>