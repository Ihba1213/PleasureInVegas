<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.guestdetails.GuestDetailFragment">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/purple_200" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/item_collector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_border"
            android:padding="8dp"
            android:text="Thu, 20 JAN"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_forward_24">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_border"
            android:padding="8dp"
            android:text="Thu, 20 JAN"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/container_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-180dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/search_option"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="240dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummyone"/>

                        <RatingBar
                            android:layout_toEndOf="@+id/iv_icon"
                            android:id="@+id/rtbProductRating"
                            style="@style/foodRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:rating="3.5" />

                        <TextView
                            android:layout_toEndOf="@+id/iv_icon"
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:text="The Cosmopolitian of Las Vegas"
                            android:layout_below="@+id/rtbProductRating"
                            android:layout_marginStart="20dp"/>
                        <TextView
                            android:layout_toEndOf="@+id/iv_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="12sp"
                            android:text="3708 South Las vegas Boulevard Las Vegas, NV 89109 US"
                            android:layout_below="@+id/name"
                            android:layout_marginStart="20dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/search_option"
                    android:id="@+id/second_card"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_second_icon"
                            android:layout_width="125dp"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummyone"/>

                        <RatingBar
                            android:layout_toEndOf="@+id/iv_second_icon"
                            android:id="@+id/rtbProductRatingTwo"
                            style="@style/foodRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:rating="3.5" />

                        <TextView
                            android:layout_toEndOf="@+id/iv_second_icon"
                            android:id="@+id/nametwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:text="The Cosmopolitian of Las Vegas"
                            android:layout_below="@+id/rtbProductRatingTwo"
                            android:layout_marginStart="20dp"/>
                        <TextView
                            android:layout_toEndOf="@+id/iv_second_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="12sp"
                            android:text="3708 South Las vegas Boulevard Las Vegas, NV 89109 US"
                            android:layout_below="@+id/nametwo"
                            android:layout_marginStart="20dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </LinearLayout>

</RelativeLayout>